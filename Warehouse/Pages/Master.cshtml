					<div class="d-flex align-items-center">
						<div class="font-35 text-success">
							<i class="bx bxs-check-circle"></i>
						</div>
						<div class="ms-3">
							<h6 class="mb-0 text-success">Success!</h6>
							<div id="alertWarehouseText">You've successfully added data.</div>
						</div>
					</div>
					<button type="button" class="btn-close" onclick="$('#alertWarehouse').addClass('d-none')" aria-label="Close"></button>
				</div>

				<div class="table-responsive">
					<table id="tableWarehouse" class="table mb-0 align-middle" style="width:100%">
						<thead class="table-light">
							<tr>
								<th>Action</th>
								<th>Code</th>
								<th>Name</th>
								<th>Branch</th>
								<th>Address</th>
